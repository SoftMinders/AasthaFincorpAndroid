<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AasthaFincorp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/main_prim</item>
    </style>
    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000</item>
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000</item>
    </style>
    <style name="CustomNavigationText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#0F9284</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>






    <style name="Theme.MyDialog" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--        <item name="android:windowNoTitle">false</item>-->
        <item name="android:textColor">@color/main_prim</item>
        <item name="colorAccent">@color/main_prim</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/white</item>

        <!--        <item name="android:windowLightNavigationBar">false</item>-->
        <item name="android:navigationBarColor">#FFFFFF</item>

    </style>

</resources>