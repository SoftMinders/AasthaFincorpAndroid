<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- Background color of EditText -->

    <stroke
        android:width="2dp"
        android:color="#D3D3D3" /> <!-- Border width and color (black) -->

    <corners android:radius="4dp" /> <!-- Optional: rounded corners -->

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
